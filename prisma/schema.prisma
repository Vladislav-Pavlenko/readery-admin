generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  genre       String
  author      String
  pdf         Bytes?    // замість pdfUrl
  image       Bytes?    // замість imageUrl
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
